<p class="is-size-4 mb-3">レビューを書く</p>
<% if p_review.errors.any? %>
  <div class="notification is-danger">
    <h2><%= p_review.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% p_review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="rating-box mt-3">
<%= form_with model: p_review, url: p_definition_p_reviews_path(p_definition), local: true do |f| %>
  <div class="main-rating">
    <div class="ratings mb-3">
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
    </div>
    <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
  </div>
  <%= f.hidden_field :p_definition_id, value: p_definition.id %>
  <%= f.hidden_field :score, id: "rating-value" %>
  <%= f.text_field :content, class: "textarea" %>
  <%= f.submit "保存", class: "button mt-3" %>
  <%= link_to "→他のレビューを見る", p_definition_p_reviews_path(p_definition), class: "button light ml-3 mt-3" %>
<% end %>
  <br><%= link_to "< 一覧に戻る >", root_path %></br>
</div>

<%= javascript_pack_tag "reviews" %>