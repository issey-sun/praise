<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <%= link_to "褒め方辞典", root_path, class: :prototype__user %>
</nav> 
<% breadcrumb :p_reviews_write %>
<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
          <header class="card-header">
            <p class="card-header-title">
              <%= @p_definition.title %>
            </p>
          </header>
          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= @p_definition.p_review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                <%= @p_definition.p_avg_score %>点（<%= @p_definition.p_reviews.count %>件のレビュー）
              </div>
            </div>
          </div>
        </div>
        <%= render 'p_reviews/form', p_review: @p_review, p_definition: @p_definition %>
      </div>
    </div>
  </div>
</section>