<div class="mobile-menu__cover"></div>
<header class="header">
  <div class="header__inner">
    <div class="logo">
      <span><%= link_to image_pack_tag("media/images/logo.svg", size: "50"), root_path, class: "logo__img" %></span>
      <span><%= link_to "skate_" , root_path , class: "logo__skate" %></span>
      <span class="logo__spot"><%= link_to "spot_" , root_path , class: "logo__spot" %></span>
      <span class="logo__search"><%= link_to "search" , root_path , class: "logo__search" %></span>
    </div>
    <nav class="header__nav">
      <ul class="header__ul">
        <% if user_signed_in? %>
            <li class="header__li">
              <%= link_to maps_path, class: "header__link" do %>
                <i class="fab fa-searchengin"></i>
                <span>view spot</span>
              <% end %>
            </li>
            <li class="header__li">
              <%= link_to new_map_path , class: "header__link" do %>
                <i class="fas fa-map-pin"></i>
                new
              <% end %>
            </li>
            <li class="header__li">
              <%= link_to users_path , class: "header__link" do %>
                <i class="fas fa-users"></i>
                lists
              <% end %>
            </li>
            <li class="header__li">
              <%= link_to user_path(id: current_user), class: "header__link"  do %>
                <i class="fas fa-user-circle"></i>
                profile
              <% end %>
            </li>
            <li class="header__li">
              <%= link_to destroy_user_session_path, method: :delete , class: "btn filled", id: "logout" do %>
                <i class="fas fa-sign-out-alt"></i>
                ログアウト
              <% end %>
            </li>
        <% else %>
            <li class="header__li">
              <%= link_to new_user_registration_path , class: "btn filled" do %>
                <i class="fas fa-user-plus"></i>
                new user
              <% end %>
            </li>
            <li class="header__li">
              <%= link_to new_user_session_path , class: "btn filled" do %>
                <i class="fas fa-sign-in-alt"></i>
                sign in
              <% end %>
            </li>
            <li class="header__li">
              <%= link_to users_guest_sign_in_path , method: :post , class: "btn filled" do %>
                <i class="fas fa-sign-in-alt"></i>
                guest_log_in
              <% end %>
            </li>
        <% end %>
      </ul>
    </nav>
    <button class="mobile-menu__btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

