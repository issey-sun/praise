

<% if review.errors.any? %>
  <div class="notification is-danger"><br>
    <ul>
      <% review.errors.full_messages.each do |message| %>
        <li>１度レビューをしているのでこれ以上のレビューはできかねます。何卒ご了承くださいませ。</li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="rating-box mt-3">

<%= form_with model: review, url: definition_reviews_path(definition), local: true do |f| %>
  <div class="main-rating">
    <div class="ratings mb-3">
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
      <span class="fa fa-star-o" id="star"></span>
    </div>
    <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
  </div>
  <%= f.hidden_field :definition_id, value: definition.id %>
  <%= f.hidden_field :score, id: "rating-value" %>
  <%= f.text_field :content, class: "textarea" %>
  <%= f.submit "保存", class: "button mt-3" %>
  <%= link_to "→他のレビューを見る", definition_reviews_path(definition), class: "button light ml-3 mt-3" %>
<% end %>
  <br><i class="fas fa-undo-alt"></i> <%= link_to " 一覧に戻る ", root_path(anchor:"definitions") %></br>
</div>

<%= javascript_pack_tag "reviews" %>