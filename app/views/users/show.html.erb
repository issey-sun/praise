<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname + "さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
         </tr>
         <tr>
            <th class="table__col1">性別</th>
            <td class="table__col2"><%= @sex.name %></td>
         </tr>
         <tr>
            <th class="table__col1">年齢</th>
            <td class="table__col2"><%= @age %></td>
         </tr>
        </tbody>
      </table>
     <%= link_to "<トップページへ戻る>", root_path, class: :user_info %></br>

    </div>
  </div>
</div>