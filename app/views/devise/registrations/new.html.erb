<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <%= link_to "褒め方辞典", root_path, class: :prototype__user %>
</nav>  
<% breadcrumb :registration %>
     <div class="inner">
      <div class="nav">

<div class="main">
  <div class="container">
  

  <div class="inner">
    <div class="form__wrapper">
    
      <h2 class="page-heading">ユーザー新規登録 <i class="fas fa-ghost"></i></h2>
            

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><br />
          <%= f.text_field :nickname, class: :form__text %>
        </div>

       <div class="field">
          <%= f.label :occupation, "所属" %><br />
          <%= f.text_area :occupation, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :position, "役職" %><br />
          <%= f.text_area :position, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :image, "アバター画像" %><br />
          <%= f.file_field :image %>
        </div>

        <br><div class='input-birth-wrap'>
          <%= f.label :birth_day, "誕生日" %><br />
            <%= raw sprintf(
                  f.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

      <div class="form">
        <div class="weight-bold-text">
          性別
        </div>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        </div>


        <br><div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div></br>
      <% end %>
    </div>
  </div>
    </div>
</div>

 

