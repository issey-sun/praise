                                  <%= render partial: "definitions/definitions_segment", collection:  @search_definitions, as: "post" %>
                                </div> 
                                 <div class="map_card_container" id="items">
                                  <%= render partial: "definitions/p_definitions_segment", collection: @p_search_definitions , as: "post" %>
                                </div>             
            
                                <% end %>

                                <% else %>
                                    <%= render'/shared/search_form/definition_title_cont' %>
                                    <br><br>
                                        <h3>該当する検索検索結果がありませんでした<i class="far fa-sad-cry"></i></h3>
                                    <br><br>
                                </div>

                                <% end %>
                            </div>
                         </div>

             </div>


            </section>
             <!-- 倫理パート-->
            <section class="resume-section" id="ethics">
                <div class="resume-section-content">
                    <h2 class="mb-5"><i class="fas fa-leaf"></i> 倫理パート</h2>
                    <%= link_to "倫理のシチュエーションについて定義", new_definition_path, class: :nav__btn %></br>
                    <% @definitions.each do |definition| %>
