<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <br><%= @definition.title%></br>
      </p>
      <p class="prototype__hedding">
      <div style="padding: 20px 40px; margin-bottom: 10px; border: 5px double #333333; border-radius: 10px; background-color: #FFCC99; color: #000000;"><%= @definition.body %></div>
      </p>
        <div class="prototype__manage">
        <% if user_signed_in? && current_user.id == @definition.user_id %>
          <%= link_to "編集する", edit_definition_path(@definition.id), class: :prototype__btn %>
          <%= link_to "削除する", definition_path(@definition), class: :prototype__btn, method: :delete %>
        <% end %>
        </div>
      <%# // 画像があれば表示する %>

      <%# // answerゾーン %>
   
      <div class="prototype__comments">
       <% if user_signed_in? %> 
         <% if current_user %>
          <%= form_with(model: [@definition, @answer], local: true) do |f| %>
            <div class="field">
              <%= f.label :answer, "回答" %><br />
              <%= f.text_field :answer %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
        <% end %>
        <ul class="comments_lists">

              <%= " 回答一覧 "%>
              <% if @answers %>
                <% @answers.each do |answer| %>
              <li class="comments_list">
                <%= link_to answer.user.nickname, "/users/#{answer.user_id}", class: :comment_user %>
                <div style="padding: 20px 40px; margin-bottom: 10px; border: 5px solid #333333; border-radius: 10px; background-color: #FFFFEE; color: #000000;"><%= answer.answer %></div> 
                

                 <% if current_user.already_liked?(answer) %>
                  <%= link_to definition_answer_likes_path(@definition,answer), method: :delete do %>
                  <i class="fas fa-heart"></i>
                  <% end %>
                  <% else %>
                  <%= link_to definition_answer_likes_path(@definition,answer), method: :post do %>
                <i class="far fa-heart"></i>
                  <% end %>
                 <% end %>
                 <%= answer.likes.count %>
                
                <%= @todays_date%>      
              <% end %>
          <% end %>
        <% end %>
            </li>
        </ul>
      </div>
    </div>

